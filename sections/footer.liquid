{{ 'footer.css' | asset_url | stylesheet_tag }}

<footer class="footer template-footer">
  <div class="footer__container">
    {% for block in section.blocks %}
      <div class="footer-block-add-menu" {{ block.shopify_attributes }}>
        {% case block.type %}
          {% when 'footer-logo' %}
            <div class="footer-brand-block">
              {% if block.settings.footer_logo != blank %}
                <div class="footer-brand-logo">
                  <img
                    src="{{ block.settings.footer_logo | image_url: width: 30 }}"
                    width="{{ block.settings.footer_logo.width }}"
                    height="{{ block.settings.footer_logo.height }}"
                    alt="{{ block.settings.footer_brand_title | escape }}"
                    loading="lazy"
                  >
                </div>
              {% endif %}

              {% if block.settings.footer_brand_title != blank %}
                <h3 class="footer-brand-title">
                  {{ block.settings.footer_brand_title }}
                </h3>
              {% endif %}
              {% if block.settings.footer_brand_description != blank %}
                <h3 class="footer-brand-description">
                  {{ block.settings.footer_brand_description }}
                </h3>
              {% endif %}

              <div class="footer-brand-social">
                {% if settings.social_facebook != blank %}
                  <a class="footer-social-link" href="{{ settings.social_facebook }}"> Facebook </a>
                {% endif %}

                {% if settings.social_instagram != blank %}
                  <a class="footer-social-link" href="{{ settings.social_instagram }}"> Instagram </a>
                {% endif %}

                {% if settings.social_twitter != blank %}
                  <a class="footer-social-link" href="{{ settings.social_twitter }}"> Twitter </a>
                {% endif %}
              </div>
            </div>

          {% when 'footer-menu' %}
            <div class="footer-multiple-link">
              <h3 class="footer-menu-template-heading">
                {{ block.settings.footer_menu_heading }}
              </h3>

              {% if block.settings.subheading != blank %}
                <p class="footer-menu-subheading">
                  {{ block.settings.footer_menu_subheading }}
                </p>
              {% endif %}

              {% if block.settings.footer_menu_select != blank %}
                <ul class="footer__links">
                  {% for link in linklists[block.settings.footer_menu_select].links %}
                    <li class="footer__link-item">
                      <a href="{{ link.url }}">
                        {{ link.title }}
                      </a>
                    </li>
                  {% endfor %}
                </ul>
              {% endif %}
            </div>

          {% when 'social-icons' %}
            <div class="footer-social-icons">
              {% if block.settings.social_heading != blank %}
                <h3 class="footer-social-heading">
                  {{ block.settings.social_heading }}
                </h3>
              {% endif %}

              <div class="footer-social-icons-list">
                {% assign target = block.settings.open_new_tab | default: false %}
                {% assign target_attr = target | if: '_blank', '' %}

                {% if settings.social_facebook != blank %}
                  <a
                    class="footer-social-icon"
                    href="{{ settings.social_facebook }}"
                    {% if block.settings.open_new_tab %}
                      target="_blank" rel="noopener"
                    {% endif %}
                    aria-label="Facebook"
                  >
                    Facebook
                  </a>
                {% endif %}

                {% if settings.social_instagram != blank %}
                  <a
                    class="footer-social-icon"
                    href="{{ settings.social_instagram }}"
                    {% if block.settings.open_new_tab %}
                      target="_blank" rel="noopener"
                    {% endif %}
                    aria-label="Instagram"
                  >
                    Instagram
                  </a>
                {% endif %}

                {% if settings.social_twitter != blank %}
                  <a
                    class="footer-social-icon"
                    href="{{ settings.social_twitter }}"
                    {% if block.settings.open_new_tab %}
                      target="_blank" rel="noopener"
                    {% endif %}
                    aria-label="Twitter"
                  >
                    Twitter
                  </a>
                {% endif %}

                {% if settings.social_youtube != blank %}
                  <a
                    class="footer-social-icon"
                    href="{{ settings.social_youtube }}"
                    {% if block.settings.open_new_tab %}
                      target="_blank" rel="noopener"
                    {% endif %}
                    aria-label="YouTube"
                  >
                    YouTube
                  </a>
                {% endif %}
              </div>
            </div>
        {% endcase %}
      </div>
    {% endfor %}
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "max_blocks": 6,
  "settings": [],
  "blocks": [
    {
      "type": "footer-menu",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "footer_menu_heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "footer_menu_subheading",
          "label": "Subheading"
        },
        {
          "type": "link_list",
          "id": "footer_menu_select",
          "label": "Menu"
        }
      ]
    },
      {
      "type": "footer-logo",
      "name": "logo",
      "settings": [
        {
          "type": "text",
          "id": "footer_brand_title",
          "label": "Title"
        },
        {
          "type": "image_picker",
          "id": "footer_logo",
          "label": "Logo"
        },
        {
          "type": "richtext",
          "id": "footer_brand_description",
          "label": "Description"
        }
      ]
    },
    {
    "type": "social-icons",
    "name": "Social Icons",
    "settings":    [
     {
      "type": "text",
      "id": "social_heading",
      "label": "Heading",
      "default": "Follow us"
    },
    {
      "type": "checkbox",
      "id": "open_new_tab",
      "label": "Open links in new tab",
      "default": true
    }
        ]
        }
  ],
  "presets": [
    {
      "name": "Footer"
    }
  ]
}
{% endschema %}

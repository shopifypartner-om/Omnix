<section class="hero">
  {% for block in section.blocks %}
    <div class="hero__slide {% if forloop.first %}is-active{% endif %}">
      
      <div class="hero__content">
        <h1 class="hero__heading">
          {{ block.settings.heading }}
        </h1>

        <p class="hero__text">
          {{ block.settings.text }}
        </p>

        {% if block.settings.button_label != blank %}
          <a href="{{ block.settings.button_link }}"
             class="hero__button button button--primary">
            {{ block.settings.button_label }}
          </a>
        {% endif %}
      </div>

      <div class="hero__media">
        {% if block.settings.image %}
          {{ block.settings.image
            | image_url: width: 1000
            | image_tag: loading: 'lazy' }}
        {% endif %}
      </div>

    </div>
  {% endfor %}
</section>

{% schema %}
{
  "name": "Hero Slider",
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Shop the New Outerwear Collection"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Shop now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider"
    }
  ]
}
{% endschema %}

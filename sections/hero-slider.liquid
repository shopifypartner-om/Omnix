{{ 'slick.css' | asset_url | stylesheet_tag }}
{{ 'slick-theme.css' | asset_url | stylesheet_tag }}
<script src="{{ 'slick.min.js' | asset_url }}" defer="defer"></script>
{{ 'hero-slider.css' | asset_url | stylesheet_tag }}


<section class="hero-slider-section" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="hero-slider-wrapper page-width" id="HeroSlider-{{ section.id }}">
    {% for block in section.blocks %}
      <div class="hero-slide" {{ block.shopify_attributes }}>
        <div class="hero-slide-image-wrap">
          {%- if block.settings.image != blank -%}
            <img src="{{ block.settings.image | image_url: width: 2000 }}" class="desktop-only" alt="{{ block.settings.heading }}" width="1920" height="650" loading="eager">
          {%- endif -%}
          {%- if block.settings.image_mobile != blank -%}
            <img src="{{ block.settings.image_mobile | image_url: width: 800 }}" class="mobile-only" alt="{{ block.settings.heading }}" width="414" height="500" loading="eager">
          {%- else -%}
            <img src="{{ block.settings.image | image_url: width: 800 }}" class="mobile-only" alt="{{ block.settings.heading }}" width="414" height="500" loading="eager">
          {%- endif -%}
        </div>

        <div class="hero-slide-content">
          <h2 class="hero-slide-heading">{{ block.settings.heading }}</h2>
          <p class="hero-slide-subheading">{{ block.settings.subheading }}</p>
          <a href="{{ block.settings.button_link }}" class="hero-slide-button">{{ block.settings.button_text }}</a>
        </div>
      </div> 
    {% endfor %}
  </div>
</section>



<script>
  const initSlider = () => {
    const slider = $('#HeroSlider-{{ section.id }}');
    
    
    if (slider.length && !slider.hasClass('slick-initialized')) {
      slider.slick({
        dots: true,               
        arrows: false,           
        infinite: true,          
        speed: 500,               
        slidesToShow: 1,           
        slidesToScroll: 1,
        fade: false,               
        autoplay: true,
        autoplaySpeed: 5000,
        pauseOnHover: false,
        cssEase: 'ease'            
      });
    }
  };


  window.addEventListener('load', initSlider);
  document.addEventListener('shopify:section:load', initSlider);
</script>

{% schema %}
{
  "name": "Hero Slider",
  "tag": "section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0, "max": 100, "step": 5, "unit": "px", "label": "Padding Top", "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0, "max": 100, "step": 5, "unit": "px", "label": "Padding Bottom", "default": 0
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Desktop Image (1920x650)"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile Image (414x500)"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Shop the New Outerwear Collection"
        },
        {
          "type": "textarea",
          "id": "subheading",
          "label": "Subheading",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "SHOP NOW"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider",
      "blocks": [
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}
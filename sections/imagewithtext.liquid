
{{ 'imagewithtext.css' | asset_url | stylesheet_tag }}
<div class="iwt-custom-section section-{{ section.id }} padding-top-{{ section.settings.padding_top }} padding-bottom-{{ section.settings.padding_bottom }}">
  <div class="iwt-wrapper page-width">

    <div class="iwt-content">
      {%- if section.settings.heading != blank -%}
        <h2 class="iwt-heading">{{ section.settings.heading }}</h2>
      {%- endif -%}

      {%- if section.settings.subheading != blank -%}
        <span class="iwt-subheading">{{ section.settings.subheading }}</span>
      {%- endif -%}

      {%- if section.settings.text != blank -%}
        <div class="iwt-text">{{ section.settings.text }}</div>
      {%- endif -%}

      <div class="iwt-button-group">
        {%- if section.settings.btn_1_text != blank -%}
          <a href="{{ section.settings.btn_1_link }}" class="btn-custom">{{ section.settings.btn_1_text }}</a>
        {%- endif -%}
        {%- if section.settings.btn_2_text != blank -%}
          <a href="{{ section.settings.btn_2_link }}" class="btn-custom">{{ section.settings.btn_2_text }}</a>
        {%- endif -%}
      </div>
    </div>

    <div class="iwt-media">
      {%- if section.settings.image != blank -%}
        {{ section.settings.image | image_url: width: 1000 | image_tag: loading: 'lazy', class: 'iwt-img' }}
      {%- else -%}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
    </div>

  </div>
</div>

{% schema %}
  {
    "name": "Image with text",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Section Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Make a Statement in Signature Heels"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "Lorem Ipsum Dolor Tempor"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Description Text",
        "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor labore dolore magna lorem ipsum dolor sit dolore magna lorem ipsum dolor sit amet"
      }, {
        "type": "text",
        "id": "btn_1_text",
        "label": "Button 1 Text",
        "default": "Shop Heels"
      }, {
        "type": "url",
        "id": "btn_1_link",
        "label": "Button 1 Link"
      }, {
        "type": "text",
        "id": "btn_2_text",
        "label": "Button 2 Text",
        "default": "Shop All Shoes"
      }, {
        "type": "url",
        "id": "btn_2_link",
        "label": "Button 2 Link"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "Image with text"
      }
    ]
  }
{% endschema %}
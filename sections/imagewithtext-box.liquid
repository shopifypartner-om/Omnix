{% style %}
  .split-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: transparent;
  }

  .split-wrapper {
    display: flex;
    flex-direction: column; /* Mobile first */
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .split-media, .split-content {
    width: 100%;
  }

  .split-media img {
    width: 100%;
    height: 95%;
    object-fit: cover;
    display: block;
  }

  .split-content {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding: 40px 30px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center; 
    text-align: center;
  }

  .split-heading {
    font-family: serif;
    font-size: 32px;
    line-height: 1.2;
    margin-bottom: 15px;
    color: inherit;
  }

  .split-subheading {
    font-size: 16px;
    margin-bottom: 30px;
    opacity: 0.9;
  }

  .split-button {
    display: inline-block;
    padding: 12px 35px;
    border: 2px solid {{ section.settings.text_color }};
    background: transparent;
    color: {{ section.settings.text_color }};
    text-decoration: none;
    text-transform: uppercase;
    font-weight: bold;
    font-size: 14px;
    letter-spacing: 1px;
    border-radius: 50px;
    transition: 0.3s;
  }

  .split-button:hover {
    background: {{ section.settings.text_color }};
    color: {{ section.settings.bg_color }};
  }

  /* --- TABLET (Image 3 layout) --- */
  @media screen and (min-width: 750px) {
    .split-wrapper {
      flex-direction: row;
      align-items: stretch;
      padding: 0 50px;
    }
    .split-media, .split-content {
      flex: 1;
              display: flex;
        align-items: center;
    }
    .split-content {
      padding: 60px;
    }
    .split-heading { font-size: 42px; }
  }

  @media screen and (min-width: 1024px) {
    .split-content {
      align-items: flex-start; 
      text-align: left;
      padding: 80px;
      flex: 1.2; 
      min-height: 400px;
    }
    .split-heading { font-size: 48px; }
  }
{% endstyle %}

<div class="split-section-{{ section.id }}">
  <div class="split-wrapper">
    
    <div class="split-media">
      {%- if section.settings.image != blank -%}
        <img src="{{ section.settings.image | image_url: width: 1500 }}" 
             alt="{{ section.settings.heading }}" 
             loading="lazy">
      {%- else -%}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
    </div>

    <div class="split-content">
      {%- if section.settings.heading != blank -%}
        <h2 class="split-heading">{{ section.settings.heading }}</h2>
      {%- endif -%}

      {%- if section.settings.subheading != blank -%}
        <p class="split-subheading">{{ section.settings.subheading }}</p>
      {%- endif -%}

      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link }}" class="split-button">
          {{ section.settings.button_label }}
        </a>
      {%- endif -%}
    </div>

  </div>
</div>

{% schema %}
{
  "name": "img-with-text-box",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Select Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Vacations meet fresh style"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Lorem Ipsum Dolor Tempor"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "SHOP SUMMER"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Content Background",
      "default": "#1c252c"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "img-with-text-box"
    }
  ]
}
{% endschema %}
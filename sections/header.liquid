{{ 'mobile-menu.css' | asset_url | stylesheet_tag }}

<header class="site-header header--{{ section.settings.logo_position }}">
  <div class="header-grid page-width">
    
    <div class="header-mobile-drawer">
      <button type="button" class="icon-button" id="menu-open" aria-label="Menu">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
      </button>
    </div>

    <div class="header-logo">
      <a href="{{ routes.root_url }}">
        {% if section.settings.logo != blank %}
          <img src="{{ section.settings.logo | image_url: width: 400 }}" 
               alt="{{ shop.name }}" 
               style="max-width: {{ section.settings.logo_width }}px">
        {% else %}
          <span class="h2">{{ shop.name }}</span>
        {% endif %}
      </a>
    </div>

    {% render 'header-menu' %}

    {% render 'header-icons' %}

  </div>
</header>

{% render 'mobile-menu-drawer' %}

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 250,
      "step": 10,
      "unit": "px",
      "label": "Logo width",
      "default": 100
    },
    {
      "type": "select",
      "id": "logo_position",
      "label": "Desktop logo position",
      "options": [
        { "value": "middle-left", "label": "Middle left" },
        { "value": "middle-center", "label": "Middle center" }
      ],
      "default": "middle-left"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "header",
      "content": "Header Icons"
    },
    {
      "type": "checkbox",
      "id": "show_search",
      "label": "Show Search Icon",
      "default": true
    },
    {
      "type": "text",
      "id": "search_text",
      "label": "Search Text (leave blank for icon only)",
      "default": "Search"
    },
    {
      "type": "checkbox",
      "id": "show_account",
      "label": "Show Account Icon",
      "default": true
    },
    {
      "type": "text",
      "id": "account_text",
      "label": "Account Text (leave blank for icon only)",
      "default": "Sign In"
    },
    {
      "type": "checkbox",
      "id": "show_cart",
      "label": "Show Cart Icon",
      "default": true
    },
    {
      "type": "text",
      "id": "cart_text",
      "label": "Cart Text (leave blank for icon only)",
      "default": "Cart"
    }
  ]
}
{% endschema %}
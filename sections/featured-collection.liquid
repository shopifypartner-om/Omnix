{% comment %}
  Basic Featured Collection Section
  Shows 4 products using card-product snippet
{% endcomment %}

<section class="featured-collection">
  <div class="page-width">

    {% if section.settings.heading != blank %}
      <h2 class="featured-collection__heading">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    {% if section.settings.collection != blank %}
      <div class="featured-collection__grid">

        {% for product in section.settings.collection.products limit: 4 %}
          {% render 'card-product', product: product %}
        {% endfor %}

      </div>
    {% else %}
      <p>Please select a collection</p>
    {% endif %}

  </div>
</section>
<style>
    .featured-collection__grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20px;
}

@media (max-width: 990px) {
  .featured-collection__grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 480px) {
  .featured-collection__grid {
    grid-template-columns: 1fr;
  }
}

.card-product {
  border: 1px solid #eee;
  padding: 12px;
  text-align: center;
}

.card-product__image img {
  width: 100%;
  height: auto;
}

.card-product__title {
  font-size: 16px;
  margin: 10px 0;
}

.card-product__price {
  margin-bottom: 10px;
}

.price-compare {
  text-decoration: line-through;
  opacity: 0.6;
  margin-left: 6px;
}


</style>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Featured Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select collection"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}

<style>
  .menu-drawer {
    position: fixed;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 999;
    transition: left 0.3s ease;
  }

  .menu-drawer.active {
    left: 0;
  }

  .drawer-inner {
    position: fixed;
    top: 0;
    left: -75%;
    width: 75%;
    height: 100vh;
    background-color: #f9f9f9;
    box-shadow: 2px 0 10px rgba(0, 0, 0, 0.15);
    z-index: 1000;
    transition: left 0.3s ease;
    display: flex;
    flex-direction: column;
    overflow-y: auto;
  }

  .menu-drawer.active .drawer-inner {
    left: 0;
  }

  .drawer-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 20px;
    border-bottom: 1px solid #e0e0e0;
  
  }

  .drawer-header-title {
    font-size: 14px;
    font-weight: 600;
    color: #333;
    margin: 0;
  }

  #menu-close {
    background: none;
    border: none;
    font-size: 24px;
    padding: 0;
    cursor: pointer;
    color: #333;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #menu-close:hover {
    opacity: 0.7;
  }

  .mobile-nav {
    display: flex;
    flex-direction: column;
    gap: 0;
    padding: 0;
    margin: 0;
    list-style: none;
    flex: 1;
  }

  .mobile-nav a {
    display: block;
    padding: 14px 20px;
    text-decoration: none;
    color: #0066cc;
    font-size: 14px;
    border-bottom: 1px solid #efefef;
    transition: background-color 0.2s;
  }

  .mobile-nav a:hover {
    background-color: #f0f0f0;
  }

  .drawer-footer {
    border-top: 1px solid #e0e0e0;
    padding: 16px 20px;
   
    margin-top: auto;
  }

  .drawer-footer-item {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 0;
    text-decoration: none;
    color: #333;
    font-size: 14px;
  }

  .drawer-footer-item svg {
    width: 18px;
    height: 18px;
  }

  .drawer-footer-item span {
    color: #0066cc;
    cursor: pointer;
  }



 
</style>

<div id="mobile-menu-drawer" class="menu-drawer">
  <div class="drawer-inner">
    <div class="drawer-header">
      <h2 class="drawer-header-title">Main Menu</h2>
      <button id="menu-close" aria-label="Close menu">Ã—</button>
    </div>

    <nav class="mobile-nav">
      {% for link in section.settings.menu.links %}
        <a href="{{ link.url }}">{{ link.title }}</a>
      {% endfor %}
    </nav>

    <div class="drawer-footer">
      

   

      <a href="{{ routes.account_url }}" class="drawer-footer-item">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
          <circle cx="12" cy="7" r="4"></circle>
        </svg>
        <span>Account</span>
        <span style="margin-left: auto; color: #0066cc;">Sign In</span>
      </a>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const menuOpen = document.getElementById('menu-open');
    const menuClose = document.getElementById('menu-close');
    const mobileMenuDrawer = document.getElementById('mobile-menu-drawer');

    // Open menu
    if (menuOpen) {
      menuOpen.addEventListener('click', function() {
        mobileMenuDrawer.classList.add('active');
        document.body.style.overflow = 'hidden';
      });
    }

    // Close menu
    if (menuClose) {
      menuClose.addEventListener('click', function() {
        mobileMenuDrawer.classList.remove('active');
        document.body.style.overflow = 'auto';
      });
    }

    // Close menu when clicking on overlay
    if (mobileMenuDrawer) {
      mobileMenuDrawer.addEventListener('click', function(e) {
        if (e.target === mobileMenuDrawer) {
          mobileMenuDrawer.classList.remove('active');
          document.body.style.overflow = 'auto';
        }
      });
    }

    // Close menu when clicking on a link
    const navLinks = document.querySelectorAll('.mobile-nav a');
    navLinks.forEach(link => {
      link.addEventListener('click', function() {
        mobileMenuDrawer.classList.remove('active');
        document.body.style.overflow = 'auto';
      });
    });
  });
</script>

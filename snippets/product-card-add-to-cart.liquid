{% if product.available %}
  <form method="post" action="/cart/add">
    <input type="hidden" name="id" value="{{ product.variants.first.id }}">
    <button type="submit" class="card-product__btn">Add to Cart</button>
  </form>
{% else %}
  <button class="card-product__btn is-disabled" disabled>Sold Out</button>
{% endif %}
<style>
  .card-product__btn {
    width: 100%;
    padding: 12px;
    font-weight: 600;
    font-family: var(--font-primary--family);
    cursor: pointer;
    font-size: 14px;
    border-style: solid;
    transition: all 0.25s ease;
    background: var(--atc-bg);
    color: var(--atc-text);
    border-color: var(--atc-border, #000000);
    border-width: var(--atc-border-width, 1px);
    border-radius: var(--atc-radius, 0px);
  }

  .card-product__btn:hover {
    opacity: 0.9;
    background: var(--atc-bg-hover);
  }

  .card-product__btn:active {
    transform: scale(0.98);
  }

  .card-product__btn.is-disabled {
    background-color: #ccc;
    border-color: #ccc;
    color: #999;
    cursor: not-allowed;
    opacity: 0.6;
  }
</style>

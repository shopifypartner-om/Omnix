{% if product and product != blank %}
  <div class="card-product">

   
    <a href="{{ product.url }}" class="card-product__link" aria-label="{{ product.title }}"></a>


    <div class="card-product__image">
      {% if product.featured_image %}
        <img
          src="{{ product.featured_image | image_url: width: 500 }}"
          alt="{{ product.title | escape }}"
          loading="lazy"
        >
      {% else %}
        {{ 'product-apparel-1' | placeholder_svg_tag }}
      {% endif %}
    </div>

    <h3 class="card-product__title">
      {{ product.title | escape }}
    </h3>


    {% render 'product-card-price', product: product %}

   
    <div class="card-product__actions">
      {% render 'product-card-add-to-cart', product: product %}
    </div>

  </div>
{% endif %}
<style>
    .card-product {
  position: relative;
  padding: 16px;
  background: #fff;
}


.card-product__link {
  position: absolute;
  inset: 0;
  z-index: 1;
}

.card-product__image,
.card-product__title,
.card-product__price {
  position: relative;
  z-index: 2;
}

.card-product__actions {
  position: relative;
  z-index: 3;
}


.card-product__actions button,
.card-product__actions form {
  pointer-events: auto;
}

</style>